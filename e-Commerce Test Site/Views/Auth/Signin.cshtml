@model SigninViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Signin";
}

<form class="border rounded p-5 fw-semibold" method="post">

    <div class="fs-3 fw-normal mb-4">Sign in</div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label" asp-for="Username">Username: </label>
        <input type="text" class="form-control" asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label" asp-for="Password">Password: </label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input border border-dark" asp-for="PersistentCookie" />
        <label class="form-check-label" asp-for="PersistentCookie">Keep me logged in</label>
    </div>
 
    <button type="submit" class="btn btn-warning mt-4 w-100">Sign in</button>

    <hr class="mt-5" />

    <div class="mt-5 fw-normal">Are you a new user? <a class="text-decoration-none" href="/auth/register">Create an account</a></div>
</form>