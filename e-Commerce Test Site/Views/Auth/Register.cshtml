@model RegisterViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<form class="border rounded p-5 fw-semibold" asp-action="Register" asp-controller="Auth" method="post">

    <div class="fs-3 fw-normal mb-4">Register an account</div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label" asp-for="Username">Username: </label>
        <input type="text" class="form-control" asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label" asp-for="Email">Email: </label>
        <input type="email" class="form-control" asp-for="Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label" asp-for="Password">Password: </label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label" asp-for="ConfirmPassword">Confirm password: </label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning mt-4 w-100">Register</button>

    <hr class="mt-5" />

    <div class="mt-5 fw-normal">Already registered? <a class="text-decoration-none" href="/auth/signin">Sign in</a></div>
</form>